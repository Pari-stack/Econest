<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutUsActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context=".MainActivity5">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="353dp"
            android:layout_height="324dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="171dp"
            android:layout_marginEnd="29dp"
            android:layout_marginBottom="292dp"
            android:fontFamily="@font/montserrat"
            android:lineSpacingExtra="8sp"
            android:text="TextView"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="EcoNest was developed by Pariya Sarin who was mentored by Ashutosh Pendse. We strive to create a community where people can share their eco-friendly activities and get support from others. Bringing the community together, people will be more motivated to do more if they get support from others.  Positive actions: lots of users who have taken environmentally friendly actions.  Community building: lots of other users acknowledge these actions.  Focus and clean: users continue to perceive that the community is focused and clean.    " />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/create_post_icon" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>